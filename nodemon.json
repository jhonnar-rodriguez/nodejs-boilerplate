{
    "watch": [
        "src"
    ],
    "ext": ".ts,.js,.json",
    "ignore": [
        "**/*.test.ts",
        "**/*.spec.ts",
        ".git",
        "node_modules",
        "coverage",
        "dist"
    ],
    "exec": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register ./src/index.ts",
    "inspect": true,
    "verbose": true
}